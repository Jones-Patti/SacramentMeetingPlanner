@model SacramentMeetingPlanner.Models.Sacrament

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Sacrament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SacramentDate" class="control-label"></label>
                <input asp-for="SacramentDate" class="form-control" />
                <span asp-validation-for="SacramentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConductingBishopric" class="control-label"></label>
                <select asp-for="ConductingBishopric" class ="form-control" asp-items="ViewBag.ConductingBishopric"></select>
            </div>
            <div class="form-group">
                <label asp-for="OpeningPrayer" class="control-label"></label>
                <select asp-for="OpeningPrayer" class ="form-control" asp-items="ViewBag.OpeningPrayer"></select>
            </div>
            <div class="form-group">
                <label asp-for="OpeningHymn" class="control-label"></label>
                <select asp-for="OpeningHymn" class ="form-control" asp-items="ViewBag.OpeningHymn"></select>
            </div>
            <div class="form-group">
                <label asp-for="SacramentHymn" class="control-label"></label>
                <select asp-for="SacramentHymn" class ="form-control" asp-items="ViewBag.SacramentHymn"></select>
            </div>
            <div class="form-group">
                <label asp-for="IntermediateHymn" class="control-label"></label>
                <select asp-for="IntermediateHymn" class ="form-control" asp-items="ViewBag.IntermediateHymn">
                    <option value="">--Optional Hymn--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ClosingHymn" class="control-label"></label>
                <select asp-for="ClosingHymn" class ="form-control" asp-items="ViewBag.ClosingHymn"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClosingPrayer" class="control-label"></label>
                <select asp-for="ClosingPrayer" class ="form-control" asp-items="ViewBag.ClosingPrayer"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
