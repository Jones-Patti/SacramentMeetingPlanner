@model SacramentMeetingPlanner.Models.SacramentDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Sacrament</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.SacramentDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.SacramentDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.ClosingHymnNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.ClosingHymnNavigation.HymnTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.ClosingPrayerNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.ClosingPrayerNavigation.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.ConductingBishopricNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.ConductingBishopricNavigation.BishopricTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.IntermediateHymnNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.IntermediateHymnNavigation.HymnTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.OpeningHymnNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.OpeningHymnNavigation.HymnTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.OpeningPrayerNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.OpeningPrayerNavigation.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sacrament.SacramentHymnNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sacrament.SacramentHymnNavigation.HymnTitle)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Sacrament.SacramentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (Model.Speakers != null)
{
    <h3> Speakers </h3>

    <p>

       

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
      Add Speaker
    </button>

        <a asp-action="Create" asp-controller="speaker"  asp-route-id= "@ViewData["MeetingID"]">Create New</a>
    

    </p>

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Topic</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Speakers)
        {
            <tr>
                <td>
                   
                    @Html.DisplayFor(modelItem => item.People.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic.TopicTitle)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="speaker" asp-route-id="@item.SpeakerId">Edit</a> |
                <a asp-action="Details" asp-controller="speaker" asp-route-id="@item.SacramentId">Details</a> |
                <a asp-action="Delete" asp-controller="speaker" asp-route-id="@item.SacramentId">Delete</a>
                </td>
            </tr>
        }
    </table>
}


<form asp-action="Create" asp-controller="Speaker">
<div class="modal" tabindex="-1" role="dialog" id="exampleModalCenter">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Speaker</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
               
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Speaker.PeopleId" class="control-label"></label>
                        <select asp-for="Speaker.PeopleId" class ="form-control" asp-items="ViewBag.PeopleId"></select>
                    </div>
                        <input type ="hidden" asp-for="Speaker.SacramentId" class ="form-control" value="@ViewData["SacramentId"]">
                    <div class="form-group">
                        <label asp-for="Speaker.TopicId" class="control-label"></label>
                        <select asp-for="Speaker.TopicId" class ="form-control" asp-items="ViewBag.TopicId"></select>
                    </div>


            </div>
        </div>       
      </div>
      <div class="modal-footer">
                <input type="submit" value="Create" class="btn btn-default" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
</form>  
