@model IEnumerable<SacramentMeetingPlanner.Models.Topic>

@{
    ViewData["Title"] = "Topics";
}

<h2>Topics</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TopicTitle)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TopicTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TopicId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TopicId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TopicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
