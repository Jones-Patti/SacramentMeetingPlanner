@model IEnumerable<SacramentMeetingPlanner.Models.Hymn>

@{
    ViewData["Title"] = "Hymn";
}

<h2>LDS Hymns</h2>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HymnId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HymnTitle)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HymnId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HymnTitle)
            </td>
        </tr>
}
    </tbody>
</table>
